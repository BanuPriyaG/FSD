@using (Html.BeginForm())
{

<div class="container">
    <div>
        <table>
            <colgroup>
                <col width="20%">
                <col width="80%">
            </colgroup>
            <tr>
                <td>
                    Follow
                    <input type="text" />
                </td>
                <td style="position:relative;padding-left:3%">
                    <form action="@Url.Action("Create", "Tweets", new { userId = Model.user_id })" method="post">
                        @Html.AntiForgeryToken()
                        What are you doing?
                        <br>
                        @Html.TextArea("message", "message", new { @class = "form-control" }) 
                        <br>
                        <input type="submit" style="width:75px;position:relative;margin-left:80%" value="Update" class="btn btn-default"/>
                    </form>
                </td>
            </tr>
            <tr>
                <td>
                    3 Tweets <br>
                    1 Following <br>
                    2 Followers <br>
                </td>
                <td>

                    <table class="table">

                        @foreach (var item in Model.Tweets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Person.fullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.message)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.created)
                                </td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
    </div>
    </div>

}
